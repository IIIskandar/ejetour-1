<div class="container">
<h1>Sign up</h1>
  <div class="row">
    <div class="col-md-5 col-centered" align="left" style="font-size: 1.1em;">
        <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <%= f.text_field :name, autofocus: true, disabled: false, required: true%>
        <%= f.text_field :last_name, autofocus: true, disabled: false, required: true%>
        <%= f.number_field :age, autofocus: true, disabled: false, required: true%>
        <%= f.text_field :dni, autofocus: true, disabled: false, required: true%>
        <%= f.text_field :gender, autofocus: true, disabled: false, required: true%>
        <%= f.text_field :address, autofocus: true, disabled: false, required: true%>
        <%= f.phone_field :phone_number, autofocus: true, disabled: false, required: true%>

    </div>
    <div class="col-md-5 col-centered" align="left" style="font-size: 1.1em;">
       
        <%= f.text_field :city, autofocus: true, disabled: false, required: true%>
        <%= f.text_field :country, autofocus: true, disabled: false, required: true%>
        <%= f.text_field :location, autofocus: true, disabled: false, required: true%>

        <%= f.email_field :email, autofocus: true, placeholder: "name@example.com", required: true%>
        <%= f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimun", required: true %>
        <%= f.password_field :password_confirmation, autocomplete: "off", autofocus: true, required: true %>

    </div>

    <!--div class="col-md-5 col-centered" align="left" style="font-size: 1.1em;">
        
    </div-->
  </div>
</div>
<div class="actions" align="center" style="margin-bottom: .5cm">
  <%= f.submit "Sign up" %>
<%end%>
  <%= render "devise/shared/links" %>
</div>